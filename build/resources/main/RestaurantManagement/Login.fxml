<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="loginLayout" prefHeight="542.0" prefWidth="652.0" stylesheets="@layoutTheme.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RestaurantManagement.LoginController">
    <children>
        <ImageView fitHeight="204.0" fitWidth="188.0" layoutX="232.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@std.png" />
            </image>
        </ImageView>
        <Label layoutX="78.0" layoutY="299.0" prefHeight="36.0" prefWidth="122.0" text="Username:" textFill="#f0f0f0">
            <font>
                <Font name="Roboto" size="25.0" />
            </font>
        </Label>
        <TextField fx:id="username" layoutX="237.0" layoutY="300.0" prefHeight="26.0" prefWidth="277.0" promptText="Username" stylesheets="@layoutTheme.css" />
        <Label layoutX="78.0" layoutY="357.0" text="Password:" textFill="WHITE">
            <font>
                <Font name="Roboto" size="25.0" />
            </font>
        </Label>
        <PasswordField fx:id="password" layoutX="237.0" layoutY="357.0" prefHeight="26.0" prefWidth="277.0" promptText="Password" stylesheets="@layoutTheme.css" />
        <Button fx:id="loginBtn" defaultButton="true" layoutX="194.0" layoutY="451.0" onAction="#login" onMouseEntered="#entered" onMouseExited="#exited" prefHeight="35.0" prefWidth="182.0" text="Login">
            <font>
                <Font name="Arial Bold" size="16.0" />
            </font>
        </Button>
        <Button cancelButton="true" layoutX="382.0" layoutY="451.0" onAction="#exit" onMouseEntered="#entered" onMouseExited="#exited" prefHeight="35.0" prefWidth="182.0" text="Cancel">
            <font>
                <Font name="Arial Bold" size="16.0" />
            </font>
        </Button>
      <Hyperlink fx:id="signup" layoutX="237.0" layoutY="402.0" onAction="#signup" prefHeight="28.0" prefWidth="316.0" style="-fx-text-fill: #0645AD;" text="Don't Have and Account? Signup" textFill="WHITE">
        <font>
            <Font name="Times New Roman" size="16.0" />
        </font>
      </Hyperlink>
    </children>
    <cursor>
        <Cursor fx:constant="OPEN_HAND" />
    </cursor>
</AnchorPane>
